<CruCluster
  @applyClusterTemplate={{not (is-empty clusterTemplateRevision)}}
  @model={{model}}
  @provider={{model.clusterProvider}}
  @mode="new"
  @close={{action "close"}}
  @clusterDriverError={{action "clusterDriverErrorAndTransition"}}
  @clusterTemplateRevisionId={{mut clusterTemplateRevision}}
/>
