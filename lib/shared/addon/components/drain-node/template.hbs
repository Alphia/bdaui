<div class="row">
  <div class="col span-11-of-23">
    <label class="acc-label">
      {{t "drainNode.mode"}}
      {{#if clusterTemplateCreate}}
        <ClusterTemplateOverrideToggle
          @path="rancherKubernetesEngineConfig.upgradeStrategy.nodeDrainInput.deleteLocalData"
          @configVariable={{selection.deleteLocalData}}
          @addOverride={{addOverride}}
          @questions={{questions}}
        />
      {{/if}}
    </label>
    <CheckOverrideAllowed
      @paramName="upgradeStrategy.drain"
      @applyClusterTemplate={{applyClusterTemplate}}
      @clusterTemplateRevision={{clusterTemplateRevision}}
      @questions={{questions}}
    >
      {{#input-or-display
          editable=editable
          value=mode
      }}
        <div>
          <label class="radio mt-0">
            {{radio-button
              selection=selection.deleteLocalData
              value=false
              disabled=view
            }}
            {{t "drainNode.safe.label"}}
            <p class="help-block">
              {{t "drainNode.safe.helpText"}}
            </p>
          </label>
        </div>
        <div>
          <label class="radio text-error">
            {{radio-button
              selection=selection.deleteLocalData
              value=true
              disabled=view
            }}
            {{t "drainNode.aggressive.label"}}
            <p class="help-block text-error">
              {{t "drainNode.aggressive.helpText" htmlSafe=true}}
            </p>
          </label>
        </div>
      {{/input-or-display}}
    </CheckOverrideAllowed>
  </div>

  <div class="col span-11-of-23 offset-1-of-23">
    <label class="acc-label">
      {{t "drainNode.gracePeriod.title"}}
      {{#if clusterTemplateCreate}}
        <ClusterTemplateOverrideToggle
          @path="rancherKubernetesEngineConfig.upgradeStrategy.drain"
          @configVariable={{selection.maxUnavailableWorker}}
          @addOverride={{addOverride}}
          @questions={{questions}}
        />
      {{/if}}
    </label>
    <CheckOverrideAllowed
      @paramName="selection.usePodGracePeriod"
      @applyClusterTemplate={{applyClusterTemplate}}
      @clusterTemplateRevision={{clusterTemplateRevision}}
      @questions={{questions}}
    >
      {{#input-or-display
          editable=editable
          value=gracePeriodForPods
      }}
        <div>
          <label class="radio mt-0">
            {{radio-button
              selection=selection.usePodGracePeriod
              value=true
              disabled=view
            }}
            {{t "drainNode.gracePeriod.default"}}
          </label>
        </div>
        <div>
          <label class="radio">
            {{radio-button
              selection=selection.usePodGracePeriod
              value=false
              disabled=view
            }}
            {{t "drainNode.gracePeriod.custom"}}
          </label>
        </div>
        <div class="input-group">
          {{input-integer
            value=selection.gracePeriod
            disabled=(or selection.usePodGracePeriod view)
            min=1
            classNames="form-control"
            placeholder=(t "drainNode.gracePeriod.placeholder")
          }}
          <span class="input-group-addon bg-default">
            {{t "generic.seconds"}}
          </span>
        </div>
      {{/input-or-display}}
    </CheckOverrideAllowed>

    <label class="acc-label mt-10">
      {{t "drainNode.timeout.title"}}
      {{#if clusterTemplateCreate}}
        <ClusterTemplateOverrideToggle
          @path="rancherKubernetesEngineConfig.upgradeStrategy.nodeDrainInput.unlimitedTimeout"
          @configVariable={{selection.unlimitedTimeout}}
          @addOverride={{addOverride}}
          @questions={{questions}}
        />
      {{/if}}
    </label>
    <CheckOverrideAllowed
      @paramName="selection.unlimitedTimeout"
      @applyClusterTemplate={{applyClusterTemplate}}
      @clusterTemplateRevision={{clusterTemplateRevision}}
      @questions={{questions}}
    >
      {{#input-or-display
          editable=editable
          value=timeout
      }}
        <div>
          <label class="radio mt-0">
            {{radio-button
              selection=selection.unlimitedTimeout
              value=true
              disabled=view
            }}
            {{t "drainNode.timeout.default"}}
          </label>
        </div>
        <div>
          <label class="radio">
            {{radio-button
              selection=selection.unlimitedTimeout
              value=false
              disabled=view
            }}
            {{t "drainNode.timeout.custom"}}
          </label>
        </div>
        <div class="input-group">
          {{input-integer
            min=1
            max=10800
            disabled=(or selection.unlimitedTimeout view)
            value=selection.timeout
            classNames="form-control"
            placeholder=(t "drainNode.timeout.placeholder")
          }}
          <span class="input-group-addon bg-default">
            {{t "generic.seconds"}}
          </span>
        </div>
      {{/input-or-display}}
    </CheckOverrideAllowed>
  </div>
</div>